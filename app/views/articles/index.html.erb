<h1>Real Fake News</h1>
 
<%= link_to 'New article', new_article_path %>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Abstract</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><img src="https://pixel.nymag.com/imgs/daily/selectall/2016/11/07/07-donald-trump.w700.h700.jpg" style="width:250px;height:250px;"></td>
      <td><i><%= article.title %></i></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>